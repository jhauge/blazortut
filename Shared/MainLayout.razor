@inherits LayoutComponentBase

<MudThemeProvider Theme="GrashultTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="4">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudAvatar Variant="Variant.Filled" Class="">KK</MudAvatar>
    </MudAppBar>
    <MudDrawer ClipMode="DrawerClipMode.Docked" Elevation="3" @bind-Open="@_drawerOpen">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6" class="py-4">Menu</MudText>
        </MudDrawerHeader>
        <MudDrawerContainer>
            <NavMenu />
        </MudDrawerContainer>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Fixed="false">
            <MudPaper Class="pa-4 mt-2 white" Elevation="0">
                @Body
            </MudPaper>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme GrashultTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = Colors.Red.Default,
            Secondary = Colors.BlueGrey.Default,
            Tertiary = Colors.Teal.Default,
            Background = Colors.BlueGrey.Lighten4,
            AppbarBackground = Colors.Red.Darken2,
            DrawerBackground = Colors.BlueGrey.Lighten5
        }
    };
}
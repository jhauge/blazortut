<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h5">
            Opret booking
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12" md="3" class="pt-16">
                <MudRadioGroup @bind-SelectedOption="@Place">
                    <MudRadio Option="1">
                        Kommandantboligen
                    </MudRadio>
                    <MudRadio Option="2">
                        Laden
                    </MudRadio>
                    <MudRadio Option="3">
                        Hele g√•rden
                    </MudRadio>
                </MudRadioGroup>
            </MudItem>
            <MudItem xs="12" md="9">
                <MudDateRangePicker xs="12" PickerVariant="PickerVariant.Static" Elevation="0" DisableToolbar="true"
                    ShowWeekNumbers="true" Required="true" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudItem class="pa-4">
            <MudButton class="px-6 mr-2" OnClick="Cancel">Annuller</MudButton>
            <MudButton OnClick="AddBooking" class="px-6" Color="Color.Primary" Variant="Variant.Filled">Ok</MudButton>
        </MudItem>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    public int Place { get; set; } = 1;

    private void Cancel() => MudDialog.Close();

    private void AddBooking()
    {
        // Do something
        MudDialog.Close();
    }
}